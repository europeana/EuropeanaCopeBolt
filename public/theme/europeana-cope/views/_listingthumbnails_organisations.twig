{% if item is not defined %}
    {% set item = record %}
{% endif %}

<div class="column fourth thumblink-fourcol thumblink-organisations">
    <a href="{{ item.link() }}">
        <div class="img-container offwhite-logo round">
            {% if item.values.image is defined and item.values.image is not empty %}
                <img class="round" src="{{ item.values.image|thumbnail(250,250,'c')}}" alt="logo for {{ item.name }}"/>
            {% else %}
                <img class="round" src="{{ 'web_assets/default.png'|thumbnail(250,250,'c')}}" alt="logo for {{ item.name }}"/>
            {% endif %}
        </div>
    </a>

    <h3>{{ item.name }}</h3>

    {% if item.country %}
    <p class="country">
        {{ item.country }}
    </p>
    {% endif %}

    {% if item.content_themes %}
    <p class="theme">
        {{ item.content_themes }}
    </p>
    {% endif %}

    <a href="{{ item.link() }}" class="button-link">
        Learn more
    </a>

</div>
