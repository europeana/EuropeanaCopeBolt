<ul class="teaser-list">

{% for item in items %}

    <li>
    {% if item.contenttype.slug == 'pages' %}
        {# PAGINA #}
        {% include 'views/_teaser_pages.twig' with { item:item } %}

    {% elseif item.contenttype.slug == 'posts' %}
        {# POST #}
        {% include 'views/_teaser_posts.twig' with { item:item } %}

    {% elseif item.contenttype.slug == 'data' %}
        {# DATA #}
        {% include 'views/_teaser_data.twig' with { item:item } %}

    {% elseif item.contenttype.slug == 'projects' %}
        {# PROJECT #}
        {% include 'views/_teaser_projects.twig' with { item:item } %}

    {% elseif item.contenttype.slug == 'events' %}
        {# EVENT #}
        {% include 'views/_teaser_events.twig' with { item:item } %}

    {% elseif item.contenttype.slug == 'persons' %}
        {# PERSON #}
        {% include 'views/_teaser_persons.twig' with { item:item } %}

    {% else %}
        {# fallback #}
        {% include 'views/_teasers.twig' with { item:item } %}

    {% endif %}

    </li>

{% endfor %}

</ul>
