    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-TPHB4DK"
height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->

    {{ include('partials/_svg_library.twig') }}

    {{ include('partials/_cookiebar.twig') }}

{% block splashpage %}
    <div> {# Needed for the sticking of main-menu #}

    {% block header %}
        {{ include('partials/_header.twig') }}
    {% endblock header %}

    {% block navigation %}
        {{ include('partials/_navigation.twig') }}
    {% endblock navigation %}

    <div class="canvas"> {# contains all items next to navigation #}

        {% block contentheader %}
            {{ include('partials/_contentheader.twig') }}
        {% endblock contentheader %}

        {% block body %}
            <main>
                {% block main %}
                {% endblock main %}
            </main>

        {% endblock body %}

        {% block footer %}
            {{ include('partials/_footer.twig') }}
        {% endblock footer %}
    </div>

    {% endblock splashpage %}

    {% block bottomincludes %}
    {% endblock bottomincludes %}
    <script src="{{ asset('js/scripts.min.js', 'theme') }}"></script>

    <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
    {# addthis utility script #}
    <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-5a21862925f66e56"></script>

    {% block trackingcodes %}
        {{ include('partials/_analytics.twig') }}
    {% endblock trackingcodes %}
    </div>

